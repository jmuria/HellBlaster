<Window x:Class="HellBlaster.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="HellBlaster" Height="350" Width="525" WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <TextBlock Margin="0,0,10,0" VerticalAlignment="Center" >Solution Path:</TextBlock>
            <TextBox  Margin="0,0,10,0" VerticalAlignment="Center" x:Name="SolutionPath" Width="300"></TextBox>
            <Button x:Name="Select" Click="Select_Click">Select</Button>
            <Button x:Name="Analyze" Click="Analyze_Click">Analyze</Button>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <TextBlock Margin="0,0,10,0" VerticalAlignment="Center" >Update:</TextBlock>
            <TextBox  Margin="0,0,10,0" VerticalAlignment="Center" x:Name="AssemblyName" Width="120"></TextBox>
            <TextBlock Margin="0,0,10,0" VerticalAlignment="Center" >To:</TextBlock>
            <TextBox  Margin="0,0,10,0" VerticalAlignment="Center" x:Name="NewVersion" Width="40"></TextBox>
            <Button x:Name="Update" Click="Update_Click">Update</Button>
        </StackPanel>
        <StackPanel x:Name="Projects" Grid.Row="2" Orientation="Vertical">
        </StackPanel>
    </Grid>
</Window>
